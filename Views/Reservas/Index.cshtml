@model IEnumerable<CinemaGabriel.Models.Reserva>

@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Todas as Reservas" : "Minhas Reservas";
}

<!-- DEBUG: Remover depois -->
<div class="alert alert-warning">
    <strong>DEBUG:</strong><br>
    Email: @User.Identity?.Name<br>
    É Admin? @User.IsInRole("Admin")<br>
    É Cliente? @User.IsInRole("Cliente")<br>
    Total de Reservas na View: @Model.Count()
</div>
<!-- FIM DEBUG -->

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">
            <i class="bi bi-ticket-perforated"></i> @ViewData["Title"]
        </h1>
    </div>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Sucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> 
            @if (User.IsInRole("Cliente"))
            {
                <span>Você ainda não tem nenhuma reserva. <a asp-controller="Sessoes" asp-action="Index">Ver sessões disponíveis</a></span>
            }
            else
            {
                <span>Nenhuma reserva no sistema.</span>
            }
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var reserva in Model)
            {
                var sessaoPassou = reserva.Sessao?.Horario <= DateTime.Now;
                
                <div class="col">
                    <div class="card h-100 shadow-sm @(sessaoPassou ? "border-secondary" : "")">
                        @if (!string.IsNullOrEmpty(reserva.Sessao?.Filme?.CaminhoImagem))
                        {
                            <img src="@reserva.Sessao.Filme.CaminhoImagem" class="card-img-top" alt="@reserva.Sessao.Filme.Titulo" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center text-white" style="height: 200px;">
                                <i class="bi bi-film" style="font-size: 4rem;"></i>
                            </div>
                        }
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@reserva.Sessao?.Filme?.Titulo</h5>
                            
                            @if (sessaoPassou)
                            {
                                <span class="badge bg-secondary mb-2">
                                    <i class="bi bi-check-circle"></i> Sessão Realizada
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success mb-2">
                                    <i class="bi bi-check-circle"></i> Reserva Ativa
                                </span>
                            }
                            
                            <p class="card-text mb-1">
                                <i class="bi bi-clock"></i> <strong>Sessão:</strong><br>
                                @reserva.Sessao?.Horario.ToString("dd/MM/yyyy HH:mm")
                            </p>
                            <p class="card-text mb-1">
                                <i class="bi bi-door-open"></i> <strong>Sala:</strong> @reserva.Sessao?.Sala
                            </p>
                            <p class="card-text mb-1">
                                <i class="bi bi-cash"></i> <strong>Preço:</strong> @reserva.Sessao?.Preco.ToString("C")
                            </p>
                            <p class="card-text mb-auto">
                                <i class="bi bi-calendar"></i> <strong>Reservado em:</strong><br>
                                @reserva.DataReserva.ToString("dd/MM/yyyy HH:mm")
                            </p>
                            
                            @if (User.IsInRole("Admin"))
                            {
                                <p class="card-text mt-2">
                                    <i class="bi bi-person"></i> <strong>Cliente:</strong><br>
                                    @reserva.User?.NomeCompleto<br>
                                    <small class="text-muted">@reserva.User?.Email</small>
                                </p>
                            }
                            
                            <div class="mt-3 d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@reserva.Id" class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="bi bi-eye"></i> Detalhes
                                </a>
                                
                                @if (!sessaoPassou || User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@reserva.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-x-circle"></i> Cancelar
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}