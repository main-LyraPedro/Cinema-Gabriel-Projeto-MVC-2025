@model CinemaGabriel.Models.Reserva

@{
    ViewData["Title"] = "Cancelar Reserva";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Reservas</a></li>
            <li class="breadcrumb-item active">Cancelar</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirmar Cancelamento de Reserva</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Atenção!</strong> Tem a certeza que deseja cancelar esta reserva?
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.Sessao?.Filme?.CaminhoImagem))
                            {
                                <img src="@Model.Sessao.Filme.CaminhoImagem" class="img-fluid rounded shadow" alt="@Model.Sessao.Filme.Titulo">
                            }
                            else
                            {
                                <div class="bg-secondary d-flex align-items-center justify-content-center text-white rounded" style="height: 250px;">
                                    <i class="bi bi-film" style="font-size: 5rem;"></i>
                                </div>
                            }
                        </div>

                        <div class="col-md-8">
                            <h3 class="mb-3">@Model.Sessao?.Filme?.Titulo</h3>
                            
                            <dl class="row">
                                <dt class="col-sm-5"><i class="bi bi-clock"></i> Horário da Sessão:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-primary">
                                        @Model.Sessao?.Horario.ToString("dd/MM/yyyy HH:mm")
                                    </span>
                                </dd>

                                <dt class="col-sm-5"><i class="bi bi-door-open"></i> Sala:</dt>
                                <dd class="col-sm-7">@Model.Sessao?.Sala</dd>

                                <dt class="col-sm-5"><i class="bi bi-cash"></i> Preço:</dt>
                                <dd class="col-sm-7">@Model.Sessao?.Preco.ToString("C")</dd>

                                <dt class="col-sm-5"><i class="bi bi-calendar"></i> Reservado em:</dt>
                                <dd class="col-sm-7">@Model.DataReserva.ToString("dd/MM/yyyy HH:mm")</dd>

                                @if (User.IsInRole("Admin"))
                                {
                                    <dt class="col-sm-5"><i class="bi bi-person"></i> Cliente:</dt>
                                    <dd class="col-sm-7">
                                        @Model.User?.NomeCompleto<br>
                                        <small class="text-muted">@Model.User?.Email</small>
                                    </dd>
                                }
                            </dl>
                        </div>
                    </div>

                    <hr class="my-4">

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Não, Voltar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Sim, Cancelar Reserva
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>