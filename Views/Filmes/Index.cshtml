@model IEnumerable<CinemaGabriel.Models.Filme>

@{
    ViewData["Title"] = "Catálogo de Filmes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">
            <i class="bi bi-film"></i> Catálogo de Filmes
        </h1>
        
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Adicionar Filme
            </a>
        }
    </div>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Sucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> Nenhum filme cadastrado no sistema.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var filme in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(filme.CaminhoImagem))
                        {
                            <img src="@filme.CaminhoImagem" class="card-img-top" alt="@filme.Titulo" style="height: 300px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center text-white" style="height: 300px;">
                                <i class="bi bi-film" style="font-size: 5rem;"></i>
                            </div>
                        }
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@filme.Titulo</h5>
                            <p class="card-text text-muted mb-2">
                                <i class="bi bi-tag"></i> @filme.Genero
                            </p>
                            <p class="card-text text-muted mb-auto">
                                <i class="bi bi-clock"></i> @filme.Duracao min
                            </p>
                            
                            <div class="mt-3 d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@filme.Id" class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="bi bi-eye"></i> Detalhes
                                </a>
                                
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@filme.Id" class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@filme.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-fechar alertas após 5 segundos
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}